{
  "name": "@pablovsouza/react-window-manager",
  "version": "0.7.0",
  "description": "Composable window manager for React with draggable, resizable windows and scoped keyboard shortcuts.",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PabloVSouza/react-window-manager.git"
  },
  "bugs": {
    "url": "https://github.com/PabloVSouza/react-window-manager/issues"
  },
  "homepage": "https://github.com/PabloVSouza/react-window-manager#readme",
  "keywords": [
    "react",
    "window-manager",
    "desktop-ui",
    "tauri"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "./dist/styles.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run build:types && npm run build:css",
    "build:types": "tsc -p tsconfig.json",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify",
    "prepare": "npm run build",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "react-reverse-portal": "^2.3.0"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.8.3"
  }
}
